<Window x:Class="PomoImmerse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomoImmerse"
        mc:Ignorable="d"
        Title="PomoImmerse 1.0.2" Height="450" Width="800"
        KeyDown="MainWindow_OnKeyDown">
    <Grid Name="WindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="InfoBtn" Click="InfoBtn_OnClick" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Background="Transparent" BorderBrush="#00707070">
                <StackPanel>
            <Image Source="Assets/Info.png" VerticalAlignment="Top" HorizontalAlignment="Right" Width="20" Height="20" Margin="5"/>
                </StackPanel>
        </Button>
        <Rectangle Grid.RowSpan="2" Name="GreyOutBox" Fill="#80000000" Opacity="0.5" Visibility="Collapsed"/> 
        <Label Name="PomoTime" Content="25:00" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top">
            <Button Name="StartBtn" Margin="5" Height="40" Width="100" Click="StartBtn_OnClick">
                <TextBlock Name="StartText" Text="Start" FontSize="20"/>
            </Button>
            <Button Name="ResetBtn" Margin="5" Height="40" Width="100" Click="ResetBtn_OnClick">
                <TextBlock Text="Reset" FontSize="20"/>            
            </Button>
            <Popup Name="ResetPopup" IsOpen="False" StaysOpen="True" Placement="Center">
                <local:ResetPopup/>
            </Popup>
            <Popup Name="InfoPopup" IsOpen="False" StaysOpen="True" Placement="Center">
                <local:InfoPopup/>
            </Popup>
        </StackPanel>
    </Grid>
</Window>
