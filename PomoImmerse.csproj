<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\info.png" />
    <None Remove="Assets\skip.png" />
    <None Remove="info.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\info.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\skip.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="info.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="InfoPopup.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="SkipPopup.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

</Project>
